<UserControl x:Class="UniversalEsir.Views.TableOverview.TableOverviewView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:UniversalEsir.Converters"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UniversalEsir.Views.TableOverview" xmlns:viewmodels="clr-namespace:UniversalEsir.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:TableOverviewViewModel}"
             mc:Ignorable="d"
             x:Name="root">
    <UserControl.Resources>
        <converters:Mm2PixelConverter x:Key="mm2PixelConverter"/>
        <converters:StringToImageConverter x:Key="stringToImageConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <Button HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="{x:Null}"
                Content="{StaticResource IconLeft}" 
                ToolTip="Vrati se na unos pazara"
                Command="{Binding CancelCommand}"
                BorderBrush="{x:Null}"/>
        <Label Content="{Binding Title}"
               FontSize="24"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               HorizontalContentAlignment="Center"/>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <ItemsControl Grid.Row="0"
                      ItemsSource="{Binding Rooms}"
                      x:Name="rooms">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Content="{Binding Name}"
                                Margin="2.5"
                                Height="50"
                                Width="150"
                                Style="{StaticResource RoundCorner}"
                                Focusable="{Binding Focusable}"
                                Command="{Binding DataContext.SelectRoomCommand, 
                            ElementName=rooms}"
                                CommandParameter="{Binding Id}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Canvas x:Name="canvas"
                Grid.Row="1">
                <Canvas.Background>
                    <VisualBrush Stretch="Uniform">
                        <VisualBrush.Visual>
                            <Image Stretch="Fill"
                                   Source="{Binding Path=CurrentPartHall.Image, 
                                    Converter={StaticResource stringToImageConverter}}"/>
                        </VisualBrush.Visual>
                    </VisualBrush>
                    <!--<ImageBrush ImageSource="{Binding Path=CurrentPartHall.Image, 
                    Converter={StaticResource stringToImageConverter}}"/>-->
                </Canvas.Background>
                <ItemsControl ItemsSource="{Binding Path=NormalPaymentPlaces}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="{Binding Background}"
                                    BorderThickness="7">
                                <Border.Background>
                                    <VisualBrush>
                                        <VisualBrush.Visual>
                                            <Image Stretch="UniformToFill"
                                                   Source="/Icons/sto.png"/>
                                        </VisualBrush.Visual>
                                    </VisualBrush>
                                </Border.Background>
                                <Button Command="{Binding DataContext.ClickOnPaymentPlaceCommand, ElementName=canvas}"
                                        CommandParameter="{Binding Order}"
                                        Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        BorderThickness="0"
                                        Background="Transparent"
                                        Style="{StaticResource NormalPaymentPlaceButton}">
                                    <StackPanel Orientation="Vertical"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Id}"
                                                   FontSize="18"
                                                   Foreground="White"
                                                   FontStyle="Italic"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding Order.CashierName}"
                                                   FontSize="10"
                                                   Foreground="White"
                                                   FontStyle="Italic"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding Total}"
                                                   FontSize="13"
                                                   Foreground="White"
                                                   FontStyle="Italic"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="Canvas.Left" Value="{Binding Left, 
                            Converter={StaticResource mm2PixelConverter}}"/>
                            <Setter Property="Canvas.Top" Value="{Binding Top, 
                            Converter={StaticResource mm2PixelConverter}}"/>
                            <Setter Property="Width" Value="{Binding Width, 
                            Converter={StaticResource mm2PixelConverter}}"/>
                            <Setter Property="Height" Value="{Binding Height, 
                            Converter={StaticResource mm2PixelConverter}}"/>
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                </ItemsControl>

                <ItemsControl ItemsSource="{Binding Path=RoundPaymentPlaces}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="{Binding Background}"
                                    BorderThickness="7"
                                    CornerRadius="10000">
                                <Border.Background>
                                    <VisualBrush>
                                        <VisualBrush.Visual>
                                            <Image Stretch="UniformToFill"
                                                   Source="/Icons/sto.png"/>
                                        </VisualBrush.Visual>
                                    </VisualBrush>
                                </Border.Background>
                                <Button Command="{Binding DataContext.ClickOnPaymentPlaceCommand, ElementName=canvas}"
                                        CommandParameter="{Binding Order}"
                                        Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        BorderThickness="0"
                                        Background="Transparent"
                                        Style="{StaticResource RoundPaymentPlaceButton}">
                                    <StackPanel Orientation="Vertical"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Id}"
                                                   FontSize="18"
                                                   Foreground="White"
                                                   FontStyle="Italic"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding Order.CashierName}"
                                                   FontSize="10"
                                                   Foreground="White"
                                                   FontStyle="Italic"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding Total}"
                                                   FontSize="14"
                                                   Foreground="White"
                                                   FontStyle="Italic"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="Canvas.Left" Value="{Binding Left, 
                            Converter={StaticResource mm2PixelConverter}}"/>
                            <Setter Property="Canvas.Top" Value="{Binding Top, 
                            Converter={StaticResource mm2PixelConverter}}"/>
                            <Setter Property="Width" Value="{Binding Diameter, 
                            Converter={StaticResource mm2PixelConverter}}"/>
                            <Setter Property="Height" Value="{Binding Diameter, 
                            Converter={StaticResource mm2PixelConverter}}"/>
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                </ItemsControl>
            </Canvas>
        </Grid>

    </Grid>
</UserControl>

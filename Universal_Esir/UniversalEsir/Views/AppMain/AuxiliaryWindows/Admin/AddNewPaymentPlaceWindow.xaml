<Window x:Class="UniversalEsir.Views.AppMain.AuxiliaryWindows.Admin.AddNewPaymentPlaceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UniversalEsir.Views.AppMain.AuxiliaryWindows.Admin" xmlns:appmain="clr-namespace:UniversalEsir.ViewModels.AppMain" d:DataContext="{d:DesignInstance Type=appmain:AdminViewModel}"
        mc:Ignorable="d"
        Background="{StaticResource BrushLogo2}"
        Height="400"
        Width="400"
        WindowStartupLocation="CenterScreen"
        Title="Dodavanje / izmena platnog mesta">
    <Grid HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Label Foreground="Black"
               FontSize="38"
               Content=" Dodavanje \ izmena&#x0a;novog platnog mesta:"
               Grid.Row="0"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Margin="10 10"/>

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0 10 0 0">
            <Label Content="Okrugao oblik?"
                   FontSize="18"
                   Height="35"
                   VerticalContentAlignment="Center"/>
            <CheckBox IsChecked="{Binding IsCheckedRoundPaymentPlace}"
                      VerticalAlignment="Center">
                <CheckBox.LayoutTransform>
                    <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
                </CheckBox.LayoutTransform>
            </CheckBox>
        </StackPanel>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0 5 0 0"
                    Visibility="{Binding RoundPaymentPlace}">
            <StackPanel Orientation="Vertical">
                <Label Height="40"
                       Foreground="Black"
                       Content="Prečnik (mm):"
                       FontSize="24"
                       HorizontalAlignment="Right"
                       Margin="0 5"/>

            </StackPanel>
            <StackPanel Orientation="Vertical">
                <TextBox Height="40"
                         Width="200"
                         Foreground="Black"
                         FontSize="24"
                         HorizontalContentAlignment="Center"
                         VerticalContentAlignment="Center"
                         Margin="0 5"
                         Text="{Binding NewPaymentPlace.Diameter, 
                                UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0 5 0 0"
                    Visibility="{Binding NormalPaymentPlace}">
            <StackPanel Orientation="Vertical">
                <Label Height="40"
                       Foreground="Black"
                       Content="Dužina (mm):"
                       FontSize="24"
                       HorizontalAlignment="Right"
                       Margin="0 5"/>
                <Label Height="40"
                       Foreground="Black"
                       Content="Širina (mm):"
                       FontSize="24"
                       HorizontalAlignment="Right"
                       Margin="0 5"/>

            </StackPanel>
            <StackPanel Orientation="Vertical">
                <TextBox Height="40"
                         Width="200"
                         Foreground="Black"
                         FontSize="24"
                         HorizontalContentAlignment="Center"
                         VerticalContentAlignment="Center"
                         Margin="0 5"
                         Text="{Binding NewPaymentPlace.Height, 
                    UpdateSourceTrigger=PropertyChanged}"/>
                <TextBox Height="40"
                         Width="200"
                         Foreground="Black"
                         FontSize="24"
                         HorizontalContentAlignment="Center"
                         VerticalContentAlignment="Center"
                         Margin="0 5"
                         Text="{Binding NewPaymentPlace.Width, 
                    UpdateSourceTrigger=PropertyChanged}"/>

            </StackPanel>
        </StackPanel>

        <Button Grid.Row="3"
                Margin="0 10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Style="{StaticResource RoundCorner}"
                Height="50"
                Width="190"
                Command="{Binding AddNewPaymentPlaceCommand}"
                CommandParameter="{Binding NewPaymentPlace.Id}">
            <StackPanel Orientation="Vertical">
                <Label HorizontalAlignment="Center"
                       HorizontalContentAlignment="Center"
                       FontSize="24"
                       Content="SAČUVAJ"
                       FontWeight="Bold"/>
            </StackPanel>
        </Button>
    </Grid>
</Window>

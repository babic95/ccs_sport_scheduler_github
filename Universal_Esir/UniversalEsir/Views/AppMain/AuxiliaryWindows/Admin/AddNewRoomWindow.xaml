<Window x:Class="UniversalEsir.Views.AppMain.AuxiliaryWindows.Admin.AddNewRoomWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UniversalEsir.Views.AppMain.AuxiliaryWindows.Admin" xmlns:appmain="clr-namespace:UniversalEsir.ViewModels.AppMain" d:DataContext="{d:DesignInstance Type=appmain:AdminViewModel}"
        mc:Ignorable="d"
        Background="{StaticResource BrushLogo2}"
        Height="400"
        Width="750"
        WindowStartupLocation="CenterScreen"
        Title="Dodavanje / izmena prostorije">
    <Grid HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Label Foreground="Black"
               FontSize="38"
               Content="Dodavanje \ izmena&#x0a;        prostorije:"
               Grid.Row="0"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Margin="10 10"/>

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0 10 0 0">
            <StackPanel Orientation="Vertical">
                <Label Height="40"
                       Foreground="Black"
                       Content="Naziv prostorije:"
                       FontSize="24"
                       HorizontalAlignment="Right"
                       Margin="0 5"/>
                <Label Height="40"
                       Foreground="Black"
                       Content="Pozadina:"
                       FontSize="24"
                       HorizontalAlignment="Right"
                       Margin="0 5"/>

            </StackPanel>
            <StackPanel Orientation="Vertical">
                <TextBox Height="40"
                         Width="500"
                         Foreground="Black"
                         FontSize="24"
                         HorizontalContentAlignment="Center"
                         VerticalContentAlignment="Center"
                         Margin="0 5"
                         Text="{Binding NewRoom.Name, 
                    UpdateSourceTrigger=PropertyChanged}"/>
                <StackPanel Orientation="Horizontal"
                            Width="500">
                    <TextBox Height="40"
                             Width="400"
                             IsReadOnly="True"
                             Foreground="Black"
                             FontSize="24"
                             HorizontalContentAlignment="Center"
                             VerticalContentAlignment="Center"
                             Margin="0 5"
                             Text="{Binding NewRoom.Image}"/>
                    <Button Width="100"
                            Height="40"
                            Content="Izaberi"
                            FontSize="20"
                            Style="{StaticResource RoundCorner}"
                            Command="{Binding SelectImageForRoomCommand}"/>
                </StackPanel>

            </StackPanel>
        </StackPanel>

        <Button Grid.Row="2"
                Margin="0 10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Style="{StaticResource RoundCorner}"
                Height="50"
                Width="190"
                Command="{Binding SaveRoomCommand}">
            <StackPanel Orientation="Vertical">
                <Label HorizontalAlignment="Center"
                       HorizontalContentAlignment="Center"
                       FontSize="24"
                       Content="SAČUVAJ"
                       FontWeight="Bold"/>
            </StackPanel>
        </Button>
    </Grid>
</Window>

<Window x:Class="UniversalEsir.Views.AppMain.AuxiliaryWindows.InformationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UniversalEsir.Views.AppMain.AuxiliaryWindows"
        mc:Ignorable="d"
        Title="Informacije o proizvođaču"
        Background="{StaticResource BrushNavigationBar}"
        Width="600"
        Height="500"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Window.InputBindings>
        <KeyBinding Key="Return" 
                    Command="{Binding SetDateCommand}"/>
    </Window.InputBindings>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Label Content="INFORMACIJE O PROIZVOĐAČU:"
               FontSize="26"
               Foreground="{StaticResource BrushLogo2}"
               HorizontalAlignment="Center"
               Grid.Row="0"
               FontWeight="Bold"/>

        <StackPanel Grid.Row="1"
                    Margin="20"
                    Orientation="Horizontal"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Serijski broj softvera:"
                           HorizontalAlignment="Right"
                           FontSize="18"
                           Foreground="{StaticResource BrushLogo2}"/>
                <TextBlock Text="Ime softvera:"
                           HorizontalAlignment="Right"
                           FontSize="18"
                           Foreground="{StaticResource BrushLogo2}"/>
                <TextBlock Text="Verzija softvera:"
                           FontSize="18"
                           HorizontalAlignment="Right"
                           Foreground="{StaticResource BrushLogo2}"/>
                <TextBlock Text="Proizvođač:"
                           FontSize="18"
                           HorizontalAlignment="Right"
                           Foreground="{StaticResource BrushLogo2}"/>
            </StackPanel>
            <StackPanel Margin="7 0 0 0">
                <TextBlock x:Name="SerialNumber" 
                           FontSize="18"
                           Foreground="{StaticResource BrushLogo2}"/>
                <TextBlock Text="CCS ESIR"
                           FontSize="18"
                           Foreground="{StaticResource BrushLogo2}"/>
                <TextBlock x:Name="Version" 
                           FontSize="18"
                           Foreground="{StaticResource BrushLogo2}"/>
                <TextBlock x:Name="ManufacturerName" 
                           FontSize="18"
                           Foreground="{StaticResource BrushLogo2}"
                           TextWrapping="Wrap"
                           MaxWidth="360"/>
            </StackPanel>
        </StackPanel>

        <Grid Grid.Row="2">
            <StackPanel Orientation="Vertical"
                        HorizontalAlignment="Left"
                        Margin="0 5">

                <Image Source="\Icons\logo.png" 
                        Height="150"
                        Margin="0 0 0 10"/>
                <TextBlock Foreground="{StaticResource BrushLogo2}"
                            HorizontalAlignment="Center" VerticalAlignment="Center" 
                            Text="CleanCodeSirmium"/>
                <TextBlock Foreground="{StaticResource BrushLogo2}"
                        HorizontalAlignment="Center" VerticalAlignment="Center" 
                        Text="tel: +381/64-44-20-296"
                                           InputScope="TelephoneNumber"/>
                <TextBlock Foreground="{StaticResource BrushLogo2}"
                            HorizontalAlignment="Center" VerticalAlignment="Center" 
                            Text="email: cleancodesirmium@gmail.com"
                            InputScope="EmailSmtpAddress"/>
            </StackPanel>
            <Button HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Content="Zatvori"
                    Foreground="{StaticResource BrushLogo2}"
                    FontSize="20"
                    Click="Button_Click"
                    Height="40"
                    Width="100"
                    Style="{StaticResource RoundCorner}"/>
            <!--<Button HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Content="Takse"
                    Foreground="{StaticResource BrushLogo2}"
                    FontSize="20"
                    Click="Button_Click_1"
                    Height="40"
                    Width="70"
                    Style="{StaticResource RoundCorner}"/>-->
        </Grid>
    </Grid>
</Window>

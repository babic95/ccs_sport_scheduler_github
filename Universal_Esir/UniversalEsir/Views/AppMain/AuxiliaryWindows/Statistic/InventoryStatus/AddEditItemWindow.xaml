<Window x:Class="UniversalEsir.Views.AppMain.AuxiliaryWindows.Statistic.AddEditItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UniversalEsir.Views.AppMain.AuxiliaryWindows.Statistic" 
        xmlns:statistic="clr-namespace:UniversalEsir.ViewModels.AppMain.Statistic"
        d:DataContext="{d:DesignInstance Type=statistic:InventoryStatusViewModel}"
        mc:Ignorable="d"
        WindowState="Maximized"
        Background="{StaticResource BrushLogo2}"
        Title="Dodaj/Izmeni artikal"
        MinWidth="820"
        WindowStartupLocation="CenterScreen">
    <Grid HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Label Foreground="Black"
               FontSize="38"
               Content="Izmena/dodavanje artikla:"
               Grid.Row="0"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Margin="0 10"/>

        <ScrollViewer Grid.Row="1"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0 10 0 0">
                <StackPanel Orientation="Horizontal">
                    <StackPanel Orientation="Vertical">
                        <Label Height="40"
                       Foreground="Black"
                       Content="Grupa:"
                       FontSize="24"
                       HorizontalAlignment="Right"
                       Margin="0 5"/>
                        <Label Height="40"
                       Foreground="Black"
                       Content="Šifra:"
                       FontSize="24"
                       HorizontalAlignment="Right"
                       Margin="0 5"/>
                        <!--<Label Height="40"
                       Foreground="Black"
                       Content="Barkod:"
                       FontSize="24"
                       HorizontalAlignment="Right"
                       Margin="0 5"/>-->
                        <Label Height="40"
                       Foreground="Black"
                       Content="Naziv:"
                       FontSize="24"
                       HorizontalAlignment="Right"
                       Margin="0 5"/>
                        <Label Height="40"
                       Foreground="Black"
                       Content="Jedinična cena:"
                       FontSize="24"
                       HorizontalAlignment="Right"
                       Margin="0 5"
                               Visibility="{Binding CurrentInventoryStatus.VisibilityJC}"/>
                        <Label Height="40"
                       Foreground="Black"
                       Content="JM:"
                       FontSize="24"
                       HorizontalAlignment="Right"
                       Margin="0 5"/>
                        <!--<Label Height="40"
                       Foreground="Black"
                       Content="Labela poreza:"
                       FontSize="24"
                       HorizontalAlignment="Right"
                       Margin="0 5"/>-->
                        <Label Height="40"
                       Foreground="Black"
                       Content="Alarm:"
                       FontSize="24"
                       HorizontalAlignment="Right"
                       Margin="0 5"/>
                        <Label Height="40"
                       Foreground="Black"
                       Content="Konobar artikal:"
                       FontSize="24"
                       HorizontalAlignment="Right"
                       Margin="0 5"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical">
                        <ComboBox Height="40"
                              Width="600"
                              FontSize="24"
                              HorizontalContentAlignment="Center"
                              VerticalContentAlignment="Center"
                              Margin="0 5"
                              SelectedItem="{Binding CurrentGroupItems, Mode=TwoWay}"
                              ItemsSource="{Binding AllGroupItems}"
                              DisplayMemberPath="Name"/>
                        <TextBox Height="40"
                                 IsReadOnly="{Binding IsReadOnlyItemId}"
                             Width="600"
                             Foreground="Black"
                             FontSize="24"
                             HorizontalContentAlignment="Center"
                             VerticalContentAlignment="Center"
                             Margin="0 5"
                             Text="{Binding CurrentInventoryStatus.Item.Id, 
                            Mode=TwoWay}"/>
                        <!--<TextBox Height="40"
                             Width="600"
                             Foreground="Black"
                             FontSize="24"
                             HorizontalContentAlignment="Center"
                             VerticalContentAlignment="Center"
                             Margin="0 5"
                             Text="{Binding CurrentInventoryStatus.Item.Barcode, 
                            Mode=TwoWay}"/>-->
                        <TextBox Height="40"
                             Width="600"
                             Foreground="Black"
                             FontSize="24"
                             HorizontalContentAlignment="Center"
                             VerticalContentAlignment="Center"
                             Margin="0 5"
                             Text="{Binding CurrentInventoryStatus.Item.Name, 
                            Mode=TwoWay}"/>
                        <TextBox Height="40"
                             Width="600"
                             Foreground="Black"
                             FontSize="24"
                             HorizontalContentAlignment="Center"
                             VerticalContentAlignment="Center"
                             Margin="0 5"
                                 IsReadOnly="{Binding EditItemIsReadOnly}"
                             Text="{Binding CurrentInventoryStatus.Item.SellingUnitPrice, Mode=TwoWay}"
                                 Visibility="{Binding CurrentInventoryStatus.VisibilityJC}"/>
                        <TextBox Height="40"
                             Width="600"
                             Foreground="Black"
                             FontSize="24"
                             HorizontalContentAlignment="Center"
                             VerticalContentAlignment="Center"
                             Margin="0 5"
                             Text="{Binding CurrentInventoryStatus.Item.Jm, Mode=TwoWay}"/>
                        <!--<ComboBox Height="40"
                                  Width="600"
                                  Foreground="Black"
                                  FontSize="24"
                                  HorizontalContentAlignment="Center"
                                  VerticalContentAlignment="Center"
                                  Margin="0 5"
                                  ItemsSource="{Binding AllLabels}"
                                  DisplayMemberPath="Name"
                                  SelectedItem="{Binding CurrentLabel}"/>-->
                        <TextBox Height="40"
                             Width="600"
                             Foreground="Black"
                             FontSize="24"
                             HorizontalContentAlignment="Center"
                             VerticalContentAlignment="Center"
                             Margin="0 5"
                             Text="{Binding CurrentInventoryStatus.Alarm, Mode=TwoWay}"/>
                        <CheckBox IsChecked="{Binding CurrentInventoryStatus.Item.IsKonobar}"
                                  Foreground="Black"
                                  HorizontalAlignment="Left"
                                  Margin="0 5">
                            <CheckBox.Style>
                                <Style TargetType="CheckBox">
                                    <Setter Property="FontSize" Value="24"/>
                                    <Setter Property="Height" Value="40"/>
                                    <Setter Property="Width" Value="40"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="CheckBox">
                                                <Grid Width="40" Height="40">
                                                    <Rectangle Name="box"
                                                               Width="40"
                                                               Height="40"
                                                               Stroke="Black"
                                                               StrokeThickness="1"
                                                               Fill="White"/>
                                                    <Path Name="checkMark"
                                                          Data="M 0 0 L 10 10 M 10 0 L 0 10"
                                                          Stroke="Black"
                                                          StrokeThickness="2"
                                                          Visibility="Collapsed"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                                </Grid>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="checkMark" Property="Visibility" Value="Visible"/>
                                                    </Trigger>
                                                    <Trigger Property="IsChecked" Value="False">
                                                        <Setter TargetName="checkMark" Property="Visibility" Value="Collapsed"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </CheckBox.Style>
                        </CheckBox>
                    </StackPanel>
                </StackPanel>

                <Label Content="Normativi:"
                   FontSize="20"
                   HorizontalAlignment="Center"/>

                <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                    <DataGrid ItemsSource="{Binding Norma}"
                              AutoGenerateColumns="False"
                              HorizontalContentAlignment="Center"
                              FontSize="16"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto" 
                              Background="AliceBlue"
                              x:Name="dataGrid"
                              CanUserAddRows="False" >
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Naziv artikla u normativu" 
                                        Width="auto"
                                        Binding="{Binding Item.Name}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center" />
                                        <Setter Property="VerticalAlignment" Value="Center" />
                                        <Setter Property="FontSize" Value="14" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Količina u normativu" 
                                        Width="auto"
                                        Binding="{Binding Quantity}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center" />
                                        <Setter Property="VerticalAlignment" Value="Center" />
                                        <Setter Property="FontSize" Value="14" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTemplateColumn>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                            <Button Command="{Binding DataContext.EditNormCommand, ElementName=dataGrid}"
                                                    CommandParameter="{Binding Item.Id}"
                                                    Background="{x:Null}"
                                                    ToolTip="Izmeni normativ"
                                                    BorderBrush="{x:Null}"
                                                    Width="30">
                                            <Image Source="/Icons/edit.png"/>
                                        </Button>
                                            <Button Command="{Binding DataContext.DeleteNormCommand, ElementName=dataGrid}"
                                                    CommandParameter="{Binding Item.Id}"
                                                    Background="{x:Null}"
                                                    ToolTip="Obriši normativ"
                                                    BorderBrush="{x:Null}"
                                                    Width="30">
                                            <Image Source="/Icons/clear.png"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button Command="{Binding OpenNormativWindowCommand}"
                            Height="30"
                            Width="30"
                            VerticalAlignment="Top"
                            Background="{x:Null}"
                            ToolTip="Dodaj normativ"
                            Content="{StaticResource IconAdd}"
                            BorderBrush="{x:Null}"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
        <Button Grid.Row="2"
                Margin="0 10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Style="{StaticResource RoundCorner}"
                Height="50"
                Width="190"
                Command="{Binding SaveCommand}">
            <StackPanel Orientation="Vertical">
                <Label HorizontalAlignment="Center"
                       HorizontalContentAlignment="Center"
                       FontSize="24"
                       Content="SAČUVAJ"
                       FontWeight="Bold"/>
            </StackPanel>
        </Button>
    </Grid>
</Window>

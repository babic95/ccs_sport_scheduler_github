<Window x:Class="UniversalEsir.Views.AppMain.AuxiliaryWindows.Statistic.AddEditDriverWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UniversalEsir.Views.AppMain.AuxiliaryWindows.Statistic" xmlns:statistic="clr-namespace:UniversalEsir.ViewModels.AppMain.Statistic" d:DataContext="{d:DesignInstance Type=statistic:DriverViewModel}"
        mc:Ignorable="d"
        Title="Izmena/dodavanje vozača" 
        Height="550" Width="800"
        Background="{StaticResource BrushLogo2}"
        WindowStartupLocation="CenterScreen">
    <Grid HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Label Foreground="Black"
               FontSize="38"
               Content="Izmena/dodavanje vozača:"
               Grid.Row="0"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Margin="0 10"/>

        <ScrollViewer Grid.Row="1"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="0 10 0 0">
                    <StackPanel Orientation="Vertical">
                        <Label Height="40"
                           Foreground="Black"
                           Content="*Ime i prezime:"
                           FontSize="24"
                           HorizontalAlignment="Right"
                           Margin="0 5"/>
                        <Label Height="40"
                           Foreground="Black"
                           Content="JMBG:"
                           FontSize="24"
                           HorizontalAlignment="Right"
                           Margin="0 5"/>
                        <Label Height="40"
                           Foreground="Black"
                           Content="Broj telefona:"
                           FontSize="24"
                           HorizontalAlignment="Right"
                           Margin="0 5"/>
                        <Label Height="40"
                           Foreground="Black"
                           Content="Grad:"
                           FontSize="24"
                           HorizontalAlignment="Right"
                           Margin="0 5"/>
                        <Label Height="40"
                           Foreground="Black"
                           Content="Adresa:"
                           FontSize="24"
                           HorizontalAlignment="Right"
                           Margin="0 5"/>
                        <Label Height="40"
                           Foreground="Black"
                           Content="E-mail:"
                           FontSize="24"
                           HorizontalAlignment="Right"
                           Margin="0 5"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical">
                        <TextBox Height="40"
                             Width="600"
                             Foreground="Black"
                             FontSize="24"
                             HorizontalContentAlignment="Center"
                             VerticalContentAlignment="Center"
                             Margin="0 5"
                             Text="{Binding CurrentDriver.Name}"/>
                        <TextBox Height="40"
                             Width="600"
                             Foreground="Black"
                             FontSize="24"
                             HorizontalContentAlignment="Center"
                             VerticalContentAlignment="Center"
                             Margin="0 5"
                             Text="{Binding CurrentDriver.Jmbg}"/>
                        <TextBox Height="40"
                             Width="600"
                             Foreground="Black"
                             FontSize="24"
                             HorizontalContentAlignment="Center"
                             VerticalContentAlignment="Center"
                             Margin="0 5"
                             Text="{Binding CurrentDriver.ContractNumber}"/>
                        <TextBox Height="40"
                             Width="600"
                             Foreground="Black"
                             FontSize="24"
                             HorizontalContentAlignment="Center"
                             VerticalContentAlignment="Center"
                             Margin="0 5"
                             Text="{Binding CurrentDriver.City}"/>
                        <TextBox Height="40"
                             Width="600"
                             Foreground="Black"
                             FontSize="24"
                             HorizontalContentAlignment="Center"
                             VerticalContentAlignment="Center"
                             Margin="0 5"
                             Text="{Binding CurrentDriver.Address}"/>
                        <TextBox Height="40"
                             Width="600"
                             Foreground="Black"
                             FontSize="24"
                             HorizontalContentAlignment="Center"
                             VerticalContentAlignment="Center"
                             Margin="0 5"
                             Text="{Binding CurrentDriver.Email}"/>
                    </StackPanel>
                </StackPanel>
                <Label Content="Obavezna su sva polja sa *"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Bottom"
                       FontSize="20"
                       FontWeight="Bold"/>
            </StackPanel>
        </ScrollViewer>

        <Button Grid.Row="2"
                Margin="0 10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Style="{StaticResource RoundCorner}"
                Height="50"
                Width="190"
                Command="{Binding SaveDriverCommand}">
            <StackPanel Orientation="Vertical">
                <Label HorizontalAlignment="Center"
                       HorizontalContentAlignment="Center"
                       FontSize="24"
                       Content="SAČUVAJ"
                       FontWeight="Bold"/>
            </StackPanel>
        </Button>
    </Grid>
</Window>

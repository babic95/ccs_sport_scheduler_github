<Window x:Class="UniversalEsir.Views.AppMain.AuxiliaryWindows.Statistic.Clanovi.AddNewOtpisWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:enums="clr-namespace:UniversalEsir.Enums.AppMain.Statistic.SportSchedulerEnumerations;assembly=UniversalEsir"
        xmlns:local="clr-namespace:UniversalEsir.Views.AppMain.AuxiliaryWindows.Statistic.Clanovi" xmlns:statistic="clr-namespace:UniversalEsir.ViewModels.AppMain.Statistic" d:DataContext="{d:DesignInstance Type=statistic:ClanoviViewModel}"
        mc:Ignorable="d"
        Title="Otpis"
        Height="450" Width="850"
        Background="{StaticResource BrushLogo2}"
        WindowStartupLocation="CenterScreen">
    <Grid HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Label Foreground="Black"
               FontSize="38"
               Content="Uplata:"
               Grid.Row="0"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Margin="0 10"/>

        <ScrollViewer Grid.Row="1"
                      VerticalAlignment="Center"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="0 10 0 0">
                    <StackPanel Orientation="Vertical">
                        <Label Height="40"
                               Foreground="Black"
                               Content="*Član:"
                               FontSize="24"
                               HorizontalAlignment="Right"
                               Margin="0 5"/>
                        <Label Height="40"
                               Foreground="Black"
                               Content="*Datum uplate:"
                               FontSize="24"
                               HorizontalAlignment="Right"
                               Margin="0 5"/>
                        <Label Height="40"
                               Foreground="Black"
                               Content="*Iznos:"
                               FontSize="24"
                               HorizontalAlignment="Right"
                               Margin="0 5"/>
                        <Label Height="40"
                               Foreground="Black"
                               Content="*Opis:"
                               FontSize="24"
                               HorizontalAlignment="Right"
                               Margin="0 5"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical">
                        <ComboBox ItemsSource="{Binding Clanovi}"
                                  SelectedItem="{Binding CurrentClan}"
                                  DisplayMemberPath="FullName"
                                  Height="40"
                                  Width="600"
                                  Foreground="Black"
                                  FontSize="24"
                                  HorizontalContentAlignment="Center"
                                  VerticalContentAlignment="Center"
                                  Margin="0 5"/>

                        <DatePicker Height="40"
                                    Width="600"
                                    Foreground="Black"
                                    FontSize="24"
                                    Margin="0 5"
                                    SelectedDate="{Binding CurrentUplata.Date}"/>
                        <TextBox Height="40"
                                 Width="600"
                                 Foreground="Black"
                                 FontSize="24"
                                 HorizontalContentAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 Margin="0 5"
                                 Text="{Binding CurrentUplata.TotalAmountString}"/>
                        <TextBox Height="40"
                                 Width="600"
                                 Foreground="Black"
                                 FontSize="24"
                                 HorizontalContentAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 Margin="0 5"
                                 Text="{Binding CurrentUplata.Description}"/>
                    </StackPanel>
                </StackPanel>
                <Label Content="Obavezna su sva polja sa *"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Bottom"
                       FontSize="20"
                       FontWeight="Bold"/>
            </StackPanel>
        </ScrollViewer>

        <Button Grid.Row="2"
                Margin="0 10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Style="{StaticResource RoundCorner}"
                Height="50"
                Width="190"
                Command="{Binding SaveOtpisCommand}">
            <StackPanel Orientation="Vertical">
                <Label HorizontalAlignment="Center"
                       HorizontalContentAlignment="Center"
                       FontSize="24"
                       Content="SAČUVAJ"
                       FontWeight="Bold"/>
            </StackPanel>
        </Button>
    </Grid>
</Window>
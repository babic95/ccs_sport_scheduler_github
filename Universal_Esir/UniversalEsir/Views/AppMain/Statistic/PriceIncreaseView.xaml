<UserControl x:Class="UniversalEsir.Views.AppMain.Statistic.PriceIncreaseView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UniversalEsir.Views.AppMain.Statistic" xmlns:statistic="clr-namespace:UniversalEsir.ViewModels.AppMain.Statistic" d:DataContext="{d:DesignInstance Type=statistic:PriceIncreaseViewModel}"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Label Content="POVEĆANJE / SMANJENJE SVIH CENA:"
               FontSize="26"
               FontWeight="Bold"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Margin="10"
               Grid.Row="0"/>

        <Grid Grid.Row="1"
              HorizontalAlignment="Center"
              VerticalAlignment="Center">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <Label Margin="20 0 0 0" Content="Grupe:"/>
                    <ComboBox ItemsSource="{Binding AllGroups}"
                              SelectedItem="{Binding CurrentGroup}"
                              DisplayMemberPath="Name"
                              Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <StackPanel Orientation="Vertical">
                        <Label Content="5 din:"
                           FontSize="22"
                           Height="35"
                           HorizontalContentAlignment="Right"
                           VerticalAlignment="Center"
                           Margin="0 10"/>
                        <Label Content="10 din:"
                           FontSize="22"
                           Height="35"
                           HorizontalContentAlignment="Right"
                           Margin="0 10"
                           VerticalAlignment="Center"/>
                        <Label Content="20 din:"
                           FontSize="22"
                           Height="35"
                           HorizontalContentAlignment="Right"
                           Margin="0 10"
                           VerticalAlignment="Center"/>
                        <Label Content="30 din:"
                           FontSize="22"
                           Height="35"
                           HorizontalContentAlignment="Right"
                           Margin="0 10"
                           VerticalAlignment="Center"/>
                        <Label Content="UKUPNO:"
                           FontSize="22"
                           Height="35"
                           HorizontalContentAlignment="Right"
                           Margin="0 10"
                           VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical">
                        <StackPanel Orientation="Horizontal"
                                Margin="0 10">
                            <Button Style="{StaticResource RoundCorner}"
                                Margin="10 0 0 0"
                                ToolTip="Povećaj"
                                Height="35"
                                Width="35"
                                Command="{Binding IncreasePricesCommand}"
                                CommandParameter="5">
                                <Image Margin="5"
                               Source="../../../Icons/plus.png"/>
                            </Button>
                            <Button Style="{StaticResource RoundCorner}"
                                Margin="10 0 0 0"
                                ToolTip="Smanji"
                                Height="35"
                                Width="35"
                                Command="{Binding LowerPricesCommand}"
                                CommandParameter="5">
                                <Image Margin="5"
                               Source="../../../Icons/clear.png"/>
                            </Button>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"
                                Margin="0 10">
                            <Button Style="{StaticResource RoundCorner}"
                                Margin="10 0 0 0"
                                ToolTip="Povećaj"
                                Height="35"
                                Width="35"
                                Command="{Binding IncreasePricesCommand}"
                                CommandParameter="10">
                                <Image Margin="5"
                               Source="../../../Icons/plus.png"/>
                            </Button>
                            <Button Style="{StaticResource RoundCorner}"
                                Margin="10 0 0 0"
                                ToolTip="Smanji"
                                Height="35"
                                Width="35"
                                Command="{Binding LowerPricesCommand}"
                                CommandParameter="10">
                                <Image Margin="5"
                               Source="../../../Icons/clear.png"/>
                            </Button>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"
                                Margin="0 10">
                            <Button Style="{StaticResource RoundCorner}"
                                Margin="10 0 0 0"
                                ToolTip="Povećaj"
                                Height="35"
                                Width="35"
                                Command="{Binding IncreasePricesCommand}"
                                CommandParameter="20">
                                <Image Margin="5"
                               Source="../../../Icons/plus.png"/>
                            </Button>
                            <Button Style="{StaticResource RoundCorner}"
                                Margin="10 0 0 0"
                                ToolTip="Smanji"
                                Height="35"
                                Width="35"
                                Command="{Binding LowerPricesCommand}"
                                CommandParameter="20">
                                <Image Margin="5"
                               Source="../../../Icons/clear.png"/>
                            </Button>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"
                                Margin="0 10">
                            <Button Style="{StaticResource RoundCorner}"
                                Margin="10 0 0 0"
                                ToolTip="Povećaj"
                                Height="35"
                                Width="35"
                                Command="{Binding IncreasePricesCommand}"
                                CommandParameter="30">
                                <Image Margin="5"
                               Source="../../../Icons/plus.png"/>
                            </Button>
                            <Button Style="{StaticResource RoundCorner}"
                                Margin="10 0 0 0"
                                ToolTip="Smanji"
                                Height="35"
                                Width="35"
                                Command="{Binding LowerPricesCommand}"
                                CommandParameter="30">
                                <Image Margin="5"
                               Source="../../../Icons/clear.png"/>
                            </Button>
                        </StackPanel>
                        <Label Content="{Binding Total}"
                           Foreground="{Binding ForegroundTotal}"
                           FontSize="22"
                           Height="35"
                           HorizontalContentAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="0 10"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Grid>

        <Button Style="{StaticResource RoundCorner}"
                    Content="Sačuvaj"
                    FontSize="12"
                    Height="40"
                    Width="100"
                    Foreground="White"
                    Command="{Binding SaveCommand}"
                    Margin="10"
                    Grid.Row="2"/>
    </Grid>
</UserControl>

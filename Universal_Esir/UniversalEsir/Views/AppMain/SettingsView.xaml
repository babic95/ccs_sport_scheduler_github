<UserControl x:Class="UniversalEsir.Views.AppMain.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UniversalEsir.Views.AppMain"
             xmlns:nav="clr-namespace:UniversalEsir.State.Navigators"
             xmlns:appmain="clr-namespace:UniversalEsir.ViewModels.AppMain"
             d:DataContext="{d:DesignInstance Type=appmain:SettingsViewModel}"
             mc:Ignorable="d">
    <UserControl.InputBindings>
        <KeyBinding Key="F2" 
                    Command="{Binding UpdateCurrentViewModelCommand}"
                    CommandParameter="{x:Static nav:CashierViewType.Report}"/>
        <KeyBinding Key="F6" 
                    Command="{Binding UpdateCurrentViewModelCommand}"
                    CommandParameter="{x:Static nav:CashierViewType.Statistics}"/>
        <KeyBinding Key="F10" 
                    Command="{Binding UpdateCurrentViewModelCommand}"
                    CommandParameter="{x:Static nav:CashierViewType.Admin}"/>
    </UserControl.InputBindings>

    <ScrollViewer CanContentScroll="True" 
                  VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Auto">
        <Grid HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0"
                   Grid.Column="1"
                   Content="Podešavanje CCS UniversalEsir-a:"
                   FontSize="25"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="0 0 0 30"/>

            <Border Grid.Row="1"
                    Grid.Column="1"
                    BorderBrush="White"
                    BorderThickness="2">
                <StackPanel Orientation="Vertical"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="40">
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <StackPanel Orientation="Vertical"
                                    Margin="20 5 0 5">
                            <!--<Label Content="URL do L-PFRa:"
                                   FontSize="18"
                                   Foreground="White"
                                   HorizontalContentAlignment="Right"
                                   VerticalContentAlignment="Center"
                                   Height="40"
                                   Margin="0 5 0 5"/>
                            <Label Content="Bar kod čitač:"
                                   FontSize="18"
                                   Foreground="White"
                                   HorizontalContentAlignment="Right"
                                   VerticalContentAlignment="Center"
                                   Height="40"
                                   Margin="0 5 0 5"/>
                            <Label Content="Štampač:"
                                   FontSize="18"
                                   Foreground="White"
                                   HorizontalContentAlignment="Right"
                                   VerticalContentAlignment="Center"
                                   Height="40"
                                   Margin="0 5 0 5"/>
                            <Label Content="A4 format štampanja:"
                                   FontSize="18"
                                   Foreground="White"
                                   HorizontalContentAlignment="Right"
                                   VerticalContentAlignment="Center"
                                   Height="40"
                                   Margin="0 5 0 5"/>
                            <Label Content="POS veličina štampanja:"
                                   FontSize="18"
                                   Foreground="White"
                                   HorizontalContentAlignment="Right"
                                   VerticalContentAlignment="Center"
                                   Height="40"
                                   Margin="0 5 0 5"
                                   Visibility="{Binding Settings.PosVisibility}"/>
                            <Label Content="Ulazni fajlovi:"
                                   FontSize="18"
                                   Foreground="White"
                                   HorizontalContentAlignment="Right"
                                   VerticalContentAlignment="Center"
                                   Height="40"
                                   Margin="0 5 0 5"/>-->
                            <Label Content="Štampač:"
                                   FontSize="18"
                                   Foreground="White"
                                   HorizontalContentAlignment="Right"
                                   VerticalContentAlignment="Center"
                                   Height="40"
                                   Margin="0 5 0 5"/>
                            <Label Content="Štampač kuhinja:"
                                   FontSize="18"
                                   Foreground="White"
                                   HorizontalContentAlignment="Right"
                                   VerticalContentAlignment="Center"
                                   Height="40"
                                   Margin="0 5 0 5"/>
                            <Label Content="Štampač šank:"
                                   FontSize="18"
                                   Foreground="White"
                                   HorizontalContentAlignment="Right"
                                   VerticalContentAlignment="Center"
                                   Height="40"
                                   Margin="0 5 0 5"/>
                            <Label Content="Login karticom:"
                                   FontSize="18"
                                   Foreground="White"
                                   HorizontalContentAlignment="Right"
                                   VerticalContentAlignment="Center"
                                   Height="40"
                                   Margin="0 5 0 5"/>
                            <Label Content="Prikaz stolova:"
                                   FontSize="18"
                                   Foreground="White"
                                   HorizontalContentAlignment="Right"
                                   VerticalContentAlignment="Center"
                                   Height="40"
                                   Margin="0 5 0 5"/>
                            <Label Content="Poništavanje porudžbine sa stola:"
                                   FontSize="18"
                                   Foreground="White"
                                   HorizontalContentAlignment="Right"
                                   VerticalContentAlignment="Center"
                                   Height="40"
                                   Margin="0 5 0 5"
                                   Visibility="{Binding CancelOrderFromTableVisibility}"/>
                            <Label Content="Prikaz Nadgrupa:"
                                   FontSize="18"
                                   Foreground="White"
                                   HorizontalContentAlignment="Right"
                                   VerticalContentAlignment="Center"
                                   Height="40"
                                   Margin="0 5 0 5"/>
                            <Label Content="POS veličina štampanja:"
                                   FontSize="18"
                                   Foreground="White"
                                   HorizontalContentAlignment="Right"
                                   VerticalContentAlignment="Center"
                                   Height="40"
                                   Margin="0 5 0 5"/>
                            <Label Content="Excel kasiri:"
                                   FontSize="18"
                                   Foreground="White"
                                   HorizontalContentAlignment="Right"
                                   VerticalContentAlignment="Center"
                                   Height="40"
                                   Margin="0 5 0 5"/>
                            <Label Content="Excel nadgrupe:"
                                   FontSize="18"
                                   Foreground="White"
                                   HorizontalContentAlignment="Right"
                                   VerticalContentAlignment="Center"
                                   Height="40"
                                   Margin="0 5 0 5"/>
                            <Label Content="Excel grupe:"
                                   FontSize="18"
                                   Foreground="White"
                                   HorizontalContentAlignment="Right"
                                   VerticalContentAlignment="Center"
                                   Height="40"
                                   Margin="0 5 0 5"/>
                            <Label Content="Excel artikli:"
                                   FontSize="18"
                                   Foreground="White"
                                   HorizontalContentAlignment="Right"
                                   VerticalContentAlignment="Center"
                                   Height="40"
                                   Margin="0 5 0 5"/>
                        </StackPanel>
                        <StackPanel Orientation="Vertical"
                                    Margin="20 5 0 5">
                            <!--<TextBox Text="{Binding Settings.UrlToLPFR}"
                                     HorizontalContentAlignment="Center"
                                     VerticalContentAlignment="Center"
                                     FontSize="20"
                                     Width="300"
                                     Height="40"
                                     Margin="0 5 0 5"/>
                            <ToggleButton Width="80"
                                          Height="40"
                                          Margin="0 5 0 5"
                                          Style="{StaticResource SwitchTypeToggleButton}"
                                          IsChecked="{Binding Settings.EnableBarCode}"/>
                            <ComboBox ItemsSource="{Binding AllPrinters}"
                                      SelectedItem="{Binding Settings.PrinterName}"
                                      FontSize="18"
                                      HorizontalAlignment="Center"
                                      HorizontalContentAlignment="Center"
                                      VerticalContentAlignment="Center"
                                      Width="300"
                                      Height="40"
                                      Margin="0 5 0 5"/>
                            <ToggleButton Width="80"
                                      Height="40"
                                      Margin="0 5 0 5"
                                      Style="{StaticResource SwitchTypeToggleButton}"
                                      IsChecked="{Binding Settings.A4Format}"/>

                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Visibility="{Binding Settings.PosVisibility}">

                                <Label Content="58mm"
                                       FontSize="18"
                                       Foreground="White"
                                       HorizontalContentAlignment="Left"
                                       VerticalContentAlignment="Center"
                                       Height="40"
                                       Margin="0 5 5 5"/>

                                <ToggleButton Width="80"
                                              Height="40"
                                              Margin="0 5 0 5"
                                              Style="{StaticResource PosSwitchTypeToggleButton}"
                                              IsChecked="{Binding Settings.Pos80mmFormat}"/>
                                <Label Content="80mm"
                                       FontSize="18"
                                       Foreground="White"
                                       HorizontalContentAlignment="Right"
                                       VerticalContentAlignment="Center"
                                       Height="40"
                                       Margin="5 5 0 5"/>
                            </StackPanel>


                            <ToggleButton Width="80"
                                          Height="40"
                                          Margin="0 5 0 5"
                                          Style="{StaticResource SwitchTypeToggleButton}"
                                          IsChecked="{Binding Settings.EnableFileSystemWatcher}"/>-->
                            <ComboBox ItemsSource="{Binding AllPrinters}"
                                      SelectedItem="{Binding Settings.PrinterName}"
                                      FontSize="18"
                                      HorizontalAlignment="Center"
                                      HorizontalContentAlignment="Center"
                                      VerticalContentAlignment="Center"
                                      Width="300"
                                      Height="40"
                                      Margin="0 5 0 5"/>
                            <ComboBox ItemsSource="{Binding AllPrinters}"
                                      SelectedItem="{Binding Settings.PrinterNameSank1}"
                                      FontSize="18"
                                      HorizontalAlignment="Center"
                                      HorizontalContentAlignment="Center"
                                      VerticalContentAlignment="Center"
                                      Width="300"
                                      Height="40"
                                      Margin="0 5 0 5"/>
                            <ComboBox ItemsSource="{Binding AllPrinters}"
                                      SelectedItem="{Binding Settings.PrinterNameKuhinja}"
                                      FontSize="18"
                                      HorizontalAlignment="Center"
                                      HorizontalContentAlignment="Center"
                                      VerticalContentAlignment="Center"
                                      Width="300"
                                      Height="40"
                                      Margin="0 5 0 5"/>
                            <ToggleButton Width="80"
                                          Height="40"
                                          Margin="0 5 0 5"
                                          Style="{StaticResource SwitchTypeToggleButton}"
                                          IsChecked="{Binding Settings.EnableSmartCard}"/>
                            <ToggleButton Width="80"
                                          Height="40"
                                          Margin="0 5 0 5"
                                          Style="{StaticResource SwitchTypeToggleButton}"
                                          IsChecked="{Binding Settings.EnableTableOverview}"/>
                            <ToggleButton Width="80"
                                          Height="40"
                                          Margin="0 5 0 5"
                                          Style="{StaticResource SwitchTypeToggleButton}"
                                          IsChecked="{Binding Settings.CancelOrderFromTable}"
                                          Visibility="{Binding Settings.CancelOrderFromTableVisibility}"/>
                            <ToggleButton Width="80"
                                          Height="40"
                                          Margin="0 5 0 5"
                                          Style="{StaticResource SwitchTypeToggleButton}"
                                          IsChecked="{Binding Settings.EnableSuperGroup}"/>
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">

                                <Label Content="58mm"
                                       FontSize="18"
                                       Foreground="White"
                                       HorizontalContentAlignment="Left"
                                       VerticalContentAlignment="Center"
                                       Height="40"
                                       Margin="0 5 5 5"/>

                                <ToggleButton Width="80"
                                              Height="40"
                                              Margin="0 5 0 5"
                                              Style="{StaticResource PosSwitchTypeToggleButton}"
                                              IsChecked="{Binding Settings.Pos80mmFormat}"/>
                                <Label Content="80mm"
                                       FontSize="18"
                                       Foreground="White"
                                       HorizontalContentAlignment="Right"
                                       VerticalContentAlignment="Center"
                                       Height="40"
                                       Margin="5 5 0 5"/>
                            </StackPanel>
                            <StackPanel Margin="0 5 0 5"
                                        Height="40"
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Center">
                                <Button Style="{StaticResource RoundCorner}"
                                        Content="Uvezi"
                                        FontSize="12"
                                        Height="40"
                                        Width="100"
                                        Foreground="White"
                                        Command="{Binding ImportCommand}"
                                        CommandParameter="Cashirs"
                                        Margin="0 0 20 0"/>
                                <Button Style="{StaticResource RoundCorner}"
                                        Content="Izvezi"
                                        FontSize="12"
                                        Height="40"
                                        Width="100"
                                        Foreground="White"
                                        Command="{Binding ExportCommand}"
                                        CommandParameter="Cashirs"
                                        Margin="20 0 0 0"/>
                            </StackPanel>
                            <StackPanel Margin="0 5 0 5"
                                        Height="40"
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Center">
                                <Button Style="{StaticResource RoundCorner}"
                                        Content="Uvezi"
                                        FontSize="12"
                                        Height="40"
                                        Width="100"
                                        Foreground="White"
                                        Command="{Binding ImportCommand}"
                                        CommandParameter="Supergrups"
                                        Margin="0 0 20 0"/>
                                <Button Style="{StaticResource RoundCorner}"
                                        Content="Izvezi"
                                        FontSize="12"
                                        Height="40"
                                        Width="100"
                                        Visibility="Hidden"
                                        Foreground="White"
                                        Command="{Binding ExportCommand}"
                                        CommandParameter="Supergrups"
                                        Margin="20 0 0 0"/>
                            </StackPanel>
                            <StackPanel Margin="0 5 0 5"
                                        Height="40"
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Center">
                                <Button Style="{StaticResource RoundCorner}"
                                        Content="Uvezi"
                                        FontSize="12"
                                        Height="40"
                                        Width="100"
                                        Foreground="White"
                                        Command="{Binding ImportCommand}"
                                        CommandParameter="Groups"
                                        Margin="0 0 20 0"/>
                                <Button Style="{StaticResource RoundCorner}"
                                        Content="Izvezi"
                                        FontSize="12"
                                        Height="40"
                                        Width="100"
                                        Foreground="White"
                                        Command="{Binding ExportCommand}"
                                        CommandParameter="Groups"
                                        Margin="20 0 0 0"/>
                            </StackPanel>
                            <StackPanel Margin="0 5 0 5"
                                        Height="40"
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Center">
                                <Button Style="{StaticResource RoundCorner}"
                                        Content="Uvezi"
                                        FontSize="12"
                                        Height="40"
                                        Width="100"
                                        Foreground="White"
                                        Command="{Binding ImportCommand}"
                                        CommandParameter="Items"
                                        Margin="0 0 20 0"/>
                                <Button Style="{StaticResource RoundCorner}"
                                        Content="Izvezi"
                                        FontSize="12"
                                        Height="40"
                                        Width="100"
                                        Foreground="White"
                                        Command="{Binding ExportCommand}"
                                        CommandParameter="Items"
                                        Margin="20 0 0 0"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Orientation="Vertical"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="0 50 0 0">
                        <!--Visibility="{Binding Settings.FileSystemWatcherVisibility}">-->
                        <Label Content="Podešavanje ulaznih fajlova:"
                           FontSize="25"
                           Foreground="White"
                           HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center"
                           Height="40"
                           Margin="0 5 0 5"/>
                        <StackPanel Orientation="Horizontal"
                                Margin="20 5 20 5">
                            <TextBox Text="{Binding Settings.InDirectory}"
                                     Width="500"
                                     IsReadOnly="True"
                                     FontSize="18"
                                     HorizontalContentAlignment="Center"
                                     VerticalContentAlignment="Center"
                                     Height="40"
                                     Margin="0 5 0 5"/>
                            <Button Content="Putanja ulaznog foldera"
                                    FontSize="18"
                                    Height="40"
                                    Width="250"
                                    Margin="0 5 0 5"
                                    Foreground="White"
                                    Style="{StaticResource RoundCorner}"
                                    Command="{Binding SetInOrOutDirectoryCommand}"
                                    CommandParameter="in"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"
                                    Margin="20 5 20 5">
                            <TextBox Text="{Binding Settings.OutDirectory}"
                                     Width="500"
                                     IsReadOnly="True"
                                     FontSize="18"
                                     HorizontalContentAlignment="Center"
                                     VerticalContentAlignment="Center"
                                     Height="40"
                                     Margin="0 5 0 5"/>
                            <Button Content="Putanja izlaznog foldera"
                                    FontSize="18"
                                    Height="40"
                                    Width="250"
                                    Margin="0 5 0 5"
                                    Foreground="White"
                                    Style="{StaticResource RoundCorner}"
                                    Command="{Binding SetInOrOutDirectoryCommand}"
                                    CommandParameter="out"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"
                                    Margin="20 5 20 5">
                            <TextBox Text="{Binding Settings.EfakturaDirectory}"
                                     Width="500"
                                     IsReadOnly="True"
                                     FontSize="18"
                                     HorizontalContentAlignment="Center"
                                     VerticalContentAlignment="Center"
                                     Height="40"
                                     Margin="0 5 0 5"/>
                            <Button Content="Putanja eFakture"
                                    FontSize="18"
                                    Height="40"
                                    Width="250"
                                    Margin="0 5 0 5"
                                    Foreground="White"
                                    Style="{StaticResource RoundCorner}"
                                    Command="{Binding SetInOrOutDirectoryCommand}"
                                    CommandParameter="eFaktura"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>
            <Button Grid.Row="2"
                    Style="{StaticResource RoundCorner}"
                    Content="Sačuvaj"
                    FontSize="18"
                    Height="50"
                    Width="120"
                    Foreground="White"
                    Margin="0 10 0 10"
                    Command="{Binding SaveSettingsCommand}"/>
        </Grid>
    </ScrollViewer>
</UserControl>


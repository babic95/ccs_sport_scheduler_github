<UserControl x:Class="UniversalEsir.Views.Sale.SaleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UniversalEsir.Views.Sale"
             xmlns:converters="clr-namespace:UniversalEsir.Converters"
             xmlns:viewmodels="clr-namespace:UniversalEsir.ViewModels" 
             xmlns:contract5Present="http://schemas.microsoft.com/winfx/2006/xaml/presentation?IsApiContractPresent(Windows.Foundation.UniversalApiContract,5)"
             d:DataContext="{d:DesignInstance Type=viewmodels:SaleViewModel}"
             mc:Ignorable="d" >

    <UserControl.Resources>
        <converters:DecimalNumberToString x:Key="decimalToString"/>
        <converters:DecimalNumberQuantityToString x:Key="decimalQuantityToString"/>
        <converters:Subtracting x:Key="subtracting"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="350" MaxWidth ="400"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0"
                  Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <Border BorderBrush="Black"
                        BorderThickness="1"
                        Grid.Row="0">
                    <Label Content="{Binding CurrentDateTime}"
                           FontSize="22"
                           HorizontalAlignment="Center"/>
                </Border>
                <Border BorderBrush="Black"
                        BorderThickness="1"
                        Grid.Row="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border BorderBrush="Black"
                                BorderThickness="1"
                                Grid.Column="0">
                            <Grid>
                                <Label Content="Član: "
                                       FontSize="14"
                                       HorizontalAlignment="Left"/>
                                <Label Content="{Binding CurrentClan.Username}"
                                       FontSize="14"
                                       HorizontalAlignment="Right"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
                <Grid Grid.Row="2"
                      Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Vertical"
                                Grid.Column="0"
                                VerticalAlignment="Center">
                        <!--<Label Content="Šifra: "
                               FontSize="14"
                               Height="30"
                               HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center"
                               Margin="0 0 0 5"/>
                        <Label Content="Naziv: "
                               FontSize="14"
                               Height="30"
                               HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center"
                               Margin="0 0 0 5"/>
                        <Label Content="Cena: "
                               FontSize="14"
                               Height="30"
                               HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center"
                               Margin="0 0 0 5"/>
                        <Label Content="Popust: "
                               FontSize="14"
                               Height="30"
                               HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center"
                               Margin="0 0 0 5"/>-->
                        <Label Content="Količina: "
                               FontSize="14"
                               Height="30"
                               HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center"
                               Margin="0 0 0 5"/>
                        <!--<Label Content="BarKod: "
                               FontSize="14"
                               Margin="0 0 0 5"/>-->
                    </StackPanel>
                    <StackPanel Orientation="Vertical"
                                Grid.Column="1"
                                VerticalAlignment="Center">
                        <!--<TextBox Text="{Binding Sifra, UpdateSourceTrigger=LostFocus}"
                                 FontSize="14"
                                 Height="30"
                                 x:Name="sifra"
                                 GotFocus="OnTextBoxGotFocus"
                                 Margin="0 0 0 5"
                                 Tag="Sifra"
                                 KeyDown="sifra_KeyDown"
                                 HorizontalContentAlignment="Center"
                                 VerticalContentAlignment="Center"/>
                        <ComboBox FontSize="14"
                                  Height="30"
                                  HorizontalContentAlignment="Center"
                                  VerticalContentAlignment="Center"
                                  Margin="0 0 0 5"
                                  FontWeight="Bold"
                                  ItemsSource="{Binding ItemsSearch}"
                                  SelectedItem="{Binding CurrentItem}"
                                  DisplayMemberPath="DisplayName"
                                  IsEditable="True"
                                  x:Name="name"
                                  KeyDown="name_KeyDown"
                                  TextSearch.TextPath="Name"
                                  IsTextSearchEnabled="True"
                                  IsTextSearchCaseSensitive="True"
                                  Text="{Binding SearchNameText, UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBox Text="{Binding CurrentItem.SellingUnitPrice}"
                                 FontSize="14"
                                 Height="30"
                                 Margin="0 0 0 5"
                                 IsReadOnly="True"
                                 HorizontalContentAlignment="Center"
                                 VerticalContentAlignment="Center"/>
                        <TextBox Text="{Binding Popust}"
                                 FontSize="14"
                                 Height="30"
                                 Margin="0 0 0 5"
                                 x:Name="popust"
                                 KeyDown="popust_KeyDown"
                                 HorizontalContentAlignment="Center"
                                 VerticalContentAlignment="Center"/>-->
                        <TextBox Text="{Binding Quantity}"
                                 FontSize="14"
                                 Height="30"
                                 Margin="0 0 0 5"
                                 x:Name="kolicina"
                                 Tag="Kolicina"
                                 GotFocus="OnTextBoxGotFocus"
                                 
                                 HorizontalContentAlignment="Center"
                                 VerticalContentAlignment="Center"/>
                        <!--<TextBox Text="{Binding Barkod, UpdateSourceTrigger=PropertyChanged}"
                                 AcceptsReturn="True"
                                 FontSize="14"
                                 Height="30"
                                 Margin="0 0 0 5"
                                 HorizontalContentAlignment="Center"
                                 VerticalContentAlignment="Center"/>-->
                    </StackPanel>
                    <StackPanel Grid.Column="2"
                                Margin="10"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center">

                        <!--<StackPanel Orientation="Vertical">

                            <StackPanel HorizontalAlignment="Center"
                                        Orientation="Horizontal">

                                <Button x:Name="but1"
                                        Style="{DynamicResource QuantityButton}" 
                                        Content="1"
                                        Command="{Binding ClickOnQuantityButtonCommand}" 
                                        CommandParameter="1"/>
                                <Button Style="{DynamicResource QuantityButton}"
                                        Content="2" 
                                        Command="{Binding ClickOnQuantityButtonCommand}"
                                        CommandParameter="2"/>
                                <Button Style="{DynamicResource QuantityButton}"
                                        Content="3" 
                                        Command="{Binding ClickOnQuantityButtonCommand}" 
                                        CommandParameter="3"/>

                            </StackPanel>

                            <StackPanel HorizontalAlignment="Center"
                                        Orientation="Horizontal">

                                <Button Style="{DynamicResource QuantityButton}"
                                        Content="4" 
                                        Command="{Binding ClickOnQuantityButtonCommand}"
                                        CommandParameter="4"/>
                                <Button Style="{DynamicResource QuantityButton}"
                                        Content="5" 
                                        Command="{Binding ClickOnQuantityButtonCommand}"
                                        CommandParameter="5"/>
                                <Button Style="{DynamicResource QuantityButton}"
                                        Content="6" 
                                        Command="{Binding ClickOnQuantityButtonCommand}"
                                        CommandParameter="6"/>

                            </StackPanel>
                            <StackPanel HorizontalAlignment="Center"
                                        Orientation="Horizontal">

                                <Button Style="{DynamicResource QuantityButton}"
                                        Content="7" 
                                        Command="{Binding ClickOnQuantityButtonCommand}"
                                        CommandParameter="7"/>
                                <Button Style="{DynamicResource QuantityButton}"
                                        Content="8" 
                                        Command="{Binding ClickOnQuantityButtonCommand}" 
                                        CommandParameter="8"/>
                                <Button Style="{DynamicResource QuantityButton}"
                                        Content="9" 
                                        Command="{Binding ClickOnQuantityButtonCommand}"
                                        CommandParameter="9"/>

                            </StackPanel>
                            <StackPanel HorizontalAlignment="Center"
                                        Orientation="Horizontal">

                                <Button Width="50" 
                                        Height="50"
                                        Style="{DynamicResource QuantityButton}"
                                        Command="{Binding ClickOnQuantityButtonCommand}"
                                        CommandParameter="backspace">
                                    <Image Source="/Icons/delete.png"
                                           Margin="1 3 3 3"/>
                                </Button>
                                <Button Style="{DynamicResource QuantityButton}"
                                        Content="0" 
                                        Command="{Binding ClickOnQuantityButtonCommand}"
                                        CommandParameter="0"/>
                                <Button Style="{DynamicResource QuantityButton}"
                                        Content="," 
                                        Command="{Binding ClickOnQuantityButtonCommand}"
                                        CommandParameter=","/>

                            </StackPanel>
                            --><!--<StackPanel HorizontalAlignment="Center"
                                        Orientation="Horizontal">

                                <Button Width="105" 
                                        Height="50"
                                        Style="{DynamicResource QuantityButton}"
                                        Command="{Binding ClickOnQuantityButtonCommand}"
                                        CommandParameter="enter"
                                        Content="Enter"/>
                                <Button Style="{DynamicResource QuantityButton}"
                                        Content="-" 
                                        Command="{Binding ClickOnQuantityButtonCommand}"
                                        CommandParameter="-"/>

                            </StackPanel>--><!--
                        </StackPanel>-->

                    </StackPanel>
                </Grid>
                <Border Grid.Row="3"
                        BorderBrush="Black"
                        BorderThickness="1"
                        Background="#EAAC8B">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <ScrollViewer HorizontalScrollBarVisibility="Disabled"
              VerticalScrollBarVisibility="Auto"
              Grid.Row="0">
                            <Grid Margin="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="60*"/>
                                    <ColumnDefinition Width="20*"/>
                                    <ColumnDefinition Width="20*"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0"
                Orientation="Vertical">
                                    <Label Content="Artikal:"
               HorizontalAlignment="Left"
               FontWeight="Bold"
               FontSize="16"/>
                                    <ItemsControl ItemsSource="{Binding OldOrders}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Vertical">
                                                    <Label Content="{Binding Item.Name}"
                                   HorizontalAlignment="Stretch"
                                   ToolTip="{Binding Item.Name}"
                                   HorizontalContentAlignment="Left"
                                   VerticalAlignment="Center"
                                   BorderBrush="Black"
                                   BorderThickness="1"
                                   FontSize="14"
                                   Height="30"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                </StackPanel>
                                <StackPanel Grid.Column="1"
                Orientation="Vertical">
                                    <Label Content="Količina:"
               HorizontalAlignment="Center"
               FontWeight="Bold"
               FontSize="16"/>

                                    <ItemsControl ItemsSource="{Binding OldOrders}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Vertical">
                                                    <Label Content="{Binding Quantity, Converter={StaticResource decimalQuantityToString}}"
                                   HorizontalAlignment="Stretch"
                                   HorizontalContentAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="14"
                                   Height="30"
                                   BorderBrush="Black"
                                   BorderThickness="1"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                                <StackPanel Grid.Column="2"
                Orientation="Vertical">
                                    <Label Content="Cena:"
               HorizontalAlignment="Center"
               FontWeight="Bold"
               FontSize="16"/>

                                    <ItemsControl ItemsSource="{Binding OldOrders}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Vertical">
                                                    <Label Content="{Binding TotalAmout, Converter={StaticResource decimalToString}}"
                                   HorizontalAlignment="Stretch"
                                   HorizontalContentAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="14"
                                   Height="30"
                                   BorderBrush="Black"
                                   BorderThickness="1"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                                <StackPanel Grid.Column="3"
                Orientation="Vertical">
                                </StackPanel>
                            </Grid>
                        </ScrollViewer>
                        <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                                      VerticalScrollBarVisibility="Auto"
                                      Grid.Row="1">
                            <Grid Margin="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="60*"/>
                                    <ColumnDefinition Width="20*"/>
                                    <ColumnDefinition Width="20*"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0"
                                        Orientation="Vertical">
                                    <Label Content="Artikal:"
                                       HorizontalAlignment="Left"
                                       FontWeight="Bold"
                                       FontSize="16"/>
                                    <ItemsControl ItemsSource="{Binding ItemsInvoice}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Vertical">
                                                    <Label Content="{Binding Item.Name}"
                                                           HorizontalAlignment="Stretch"
                                                           ToolTip="{Binding Item.Name}"
                                                           HorizontalContentAlignment="Left"
                                                           VerticalAlignment="Center"
                                                           BorderBrush="Black"
                                                           BorderThickness="1"
                                                           FontSize="14"
                                                           Height="30"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                </StackPanel>
                                <StackPanel Grid.Column="1"
                                        Orientation="Vertical">
                                    <Label Content="Količina:"
                                       HorizontalAlignment="Center"
                                       FontWeight="Bold"
                                       FontSize="16"/>

                                    <ItemsControl ItemsSource="{Binding ItemsInvoice}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Vertical">
                                                    <Label Content="{Binding Quantity, Converter={StaticResource decimalQuantityToString}}"
                                                           HorizontalAlignment="Stretch"
                                                           HorizontalContentAlignment="Center"
                                                           VerticalAlignment="Center"
                                                           FontSize="14"
                                                           Height="30"
                                                           BorderBrush="Black"
                                                           BorderThickness="1"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                                <StackPanel Grid.Column="2"
                                        Orientation="Vertical">
                                    <Label Content="Cena:"
                                       HorizontalAlignment="Center"
                                       FontWeight="Bold"
                                       FontSize="16"/>

                                    <ItemsControl ItemsSource="{Binding ItemsInvoice}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Vertical">
                                                    <Label Content="{Binding TotalAmout, Converter={StaticResource decimalToString}}"
                                                           HorizontalAlignment="Stretch"
                                                           HorizontalContentAlignment="Center"
                                                           VerticalAlignment="Center"
                                                           FontSize="14"
                                                           Height="30"
                                                           BorderBrush="Black"
                                                           BorderThickness="1"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                                <StackPanel Grid.Column="3"
                                        Orientation="Vertical">
                                    <ItemsControl ItemsSource="{Binding ItemsInvoice}"
                                              Margin="10 30 0 0"
                                              x:Name="buttons">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Vertical">
                                                    <Button Background="Transparent"
                                                        ToolTip="Smanji količinu"
                                                        BorderBrush="Transparent"
                                                        Height="30"
                                                        Width="30"
                                                        Command="{Binding DataContext.ReduceQuantityCommand, ElementName=buttons}"
                                                        CommandParameter="{Binding Item.Id}">
                                                        <Image Source="/Icons/clear.png"/>
                                                    </Button>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Grid>
                        </ScrollViewer>

                        
                    </Grid>
                    
                </Border>
                <Grid Grid.Row="4"
                      Margin="20 15 20 0">
                    <Label Content="Total:"
                           FontSize="30"
                           FontWeight="Bold"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"/>
                    <Label Content="{Binding TotalAmount, Converter={StaticResource decimalToString}}"
                           FontSize="30"
                           FontWeight="Bold"
                           Foreground="{StaticResource BrushLogo1}"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"/>
                </Grid>
            </Grid>

        <Grid Grid.Column="1">
                <Button Margin="0 5 5 0"
                        Height="40"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Background="{x:Null}"
                        Content="{StaticResource IconLogout}" 
                        ToolTip="Izloguj se"
                        Command="{Binding LogoutCommand}"
                        BorderBrush="{x:Null}"/>

                <Grid Margin="5 40 40 5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="70"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0"
                          Visibility="{Binding VisibilitySupergroups}">
                        <ItemsControl ItemsSource="{Binding Supergroups}"
                                      x:Name="supergroups">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel VerticalAlignment="Center"
                                               HorizontalAlignment="Center"
                                               Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Margin="2.5"
                                            Height="75"
                                            MinWidth="180"
                                            Style="{StaticResource RoundCorner}"
                                            Focusable="{Binding Focusable}"
                                            Command="{Binding DataContext.SelectSupergroupCommand, 
                                        ElementName=supergroups}"
                                            CommandParameter="{Binding Id}">
                                        <TextBlock TextWrapping="Wrap"
                                               FontWeight="Bold"
                                               Text="{Binding Name}"
                                               FontSize="20"
                                               HorizontalAlignment="Center"/>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                    
                    <ItemsControl Grid.Row="1"
                                  ItemsSource="{Binding Groups}"
                                  x:Name="groups">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Margin="2.5"
                                        Height="50"
                                        Width="150"
                                        Style="{StaticResource RoundCorner}"
                                        Focusable="{Binding Focusable}"
                                        Command="{Binding DataContext.SelectGroupCommand, 
                                    ElementName=groups}"
                                        CommandParameter="{Binding Id}">
                                    <TextBlock TextWrapping="Wrap"
                                               FontWeight="Bold"
                                               Text="{Binding Name}"
                                               FontSize="16"
                                               HorizontalAlignment="Center"/>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled"
                                  Grid.Row="2">
                        <ItemsControl ItemsSource="{Binding Items}"
                                      x:Name="items"
                                      Background="#EAAC8B"
                                      Margin="0 10">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           Orientation="Horizontal"
                                           Margin="0 10"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Margin="2.5"
                                        Height="70"
                                        Width="200"
                                        Style="{StaticResource RoundCorner}"
                                        Command="{Binding DataContext.SelectItemCommand, 
                                    ElementName=items}"
                                        CommandParameter="{Binding Id}">
                                        <TextBlock TextWrapping="Wrap"
                                               FontWeight="Bold"
                                               Text="{Binding Name}"
                                               FontSize="16"
                                               HorizontalAlignment="Center"/>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    <Grid Grid.Row="3"
                          Margin="0 10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" 
                                Style="{StaticResource RoundCorner}"
                                FontSize="28"
                                Height="50"
                                Width="50"
                                ToolTip="Štampaj svoj izveštaj"
                                Command="{Binding PrintReportCommand}">
                            <Image Margin="5"
                               Source="../../Icons/printer.png"/>
                        </Button>
                        <Grid Grid.Column="1"
                              Margin="10 0 5 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button Content="Poništi"
                                    FontSize="24"
                                    Grid.Column="0"
                                    Command="{Binding ResetAllCommand}"
                                    Style="{StaticResource RoundCorner}"/>
                            <Button Content="Uplata"
                                    FontSize="24"
                                    Grid.Column="1"
                                    Command="{Binding OpenUplataKonobarCommand}"
                                    Style="{StaticResource RoundCorner}"/>
                            <!--<Button Content="Obriši"
                                    FontSize="24"
                                    Grid.Column="1"
                                    IsEnabled="{Binding IsEnabledRemoveOrder}"
                                    Command="{Binding RemoveOrderCommand}"
                                    Style="{StaticResource RoundCorner}"/>-->
                        </Grid>
                        <Button Grid.Column="2"
                                Content="Zakači"
                                FontSize="24"
                                Command="{Binding HookOrderOnTableCommand}"
                                Style="{StaticResource RoundCorner}"
                                Margin="5 0 5 0"
                                Visibility="{Binding TableOverviewVisibility}"
                                IsEnabled="{Binding HookOrderEnable}"/>
                        <Button Grid.Column="3"
                                Content="Pregled"
                                FontSize="24"
                                Command="{Binding TableOverviewCommand}"
                                Style="{StaticResource RoundCorner}"
                                Margin="5 0 10 0"
                                Visibility="{Binding TableOverviewVisibility}"/>
                        <Button Grid.Column="4"
                                Content="Naplati"
                                FontSize="24"
                                Command="{Binding PayCommand}"
                                Style="{StaticResource RoundCorner}"/>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
        
    </Grid>
</UserControl>
